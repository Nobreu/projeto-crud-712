<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Alunos</title>
    <!-- Inclui o CSS do Bootstrap -->
    <link rel="stylesheet" href="/bootstrap.min.css">
    <!-- Inclui seu CSS externo para estilos personalizados (depois do Bootstrap) -->
    <link rel="stylesheet" href="/style.css"> <!-- Caminho corrigido aqui -->
    <style>
        /* Seus estilos internos que n√£o precisam de um arquivo externo podem permanecer aqui */
        .aluno-foto {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
        }
        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>Lista de Alunos</h1>
                <% if (usuario) { %>
                    <p class="text-muted mb-0">Bem-vindo, <strong><%= usuario.nome %></strong>!</p>
                <% } %>
            </div>
            <div class="d-flex gap-2">
                <a href="/alunos/novo" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Novo Aluno
                </a>
                <a href="/logout" class="btn btn-outline-secondary">
                    <i class="bi bi-box-arrow-right"></i> Sair
                </a>
            </div>
        </div>

        <% if (typeof req !== 'undefined' && req.query.sucesso) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= req.query.sucesso %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof req !== 'undefined' && req.query.erro) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= req.query.erro %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (alunos && alunos.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Foto</th>
                            <th>Nascimento</th>
                            <th>Contato Resp.</th>
                            <th>Faixa</th>
                            <th>Graus</th>
                            <th>Peso (kg)</th>
                            <th>Altura (cm)</th>
                            <th>Tipo Sangu√≠neo</th>
                            <th>Plano Sa√∫de</th>
                            <th>Alergias</th>
                            <th>Obs. M√©dicas</th>
                            <th>Status</th>
                            <th>A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% alunos.forEach(aluno => { %>
                            <tr>
                                <td><%= aluno.id_aluno %></td>
                                <td><%= aluno.nome %></td>
                                <td>
                                    <% if (aluno.foto) { %>
                                        <img src="<%= aluno.foto %>" alt="Foto de <%= aluno.nome %>" class="aluno-foto">
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td><%= new Date(aluno.data_nascimento).toLocaleDateString('pt-BR') %></td>
                                <td><%= aluno.contato_responsavel %></td>
                                <td><%= aluno.faixa %></td>
                                <td><%= aluno.graus %></td>
                                <td><%= aluno.peso %></td>
                                <td><%= aluno.altura %></td>
                                <td><%= aluno.tipo_sanguineo %></td>
                                <td><%= aluno.plano_saude %></td>
                                <td><%= aluno.alergias %></td>
                                <td><%= aluno.observacoes_medicas %></td>
                                <td>
                                    <span class="badge <%= aluno.status === 'ativo' ? 'bg-success' : 'bg-secondary' %>">
                                        <%= aluno.status %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/alunos/<%= aluno.id_aluno %>/editar" class="btn btn-outline-primary btn-sm" title="Editar">
                                            ‚úèÔ∏è
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                                onclick="confirmarExclusao(<%= aluno.id_aluno %>, '<%= aluno.nome %>')" title="Excluir">
                                            üóëÔ∏è
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                Nenhum aluno encontrado.
            </div>
        <% } %>
    </div>

    <!-- Formul√°rio oculto para exclus√£o -->
    <form id="formExclusao" method="POST" style="display: none;">
        <input type="hidden" name="_method" value="DELETE">
    </form>

    <!-- Inclui o JavaScript do Bootstrap (no final do body para melhor performance) -->
    <script src="/bootstrap.bundle.min.js"></script>
    <script>
        function confirmarExclusao(id, nome) {
            if (confirm(`Tem certeza que deseja excluir o aluno "${nome}"?\n\nEsta a√ß√£o n√£o pode ser desfeita.`)) {
                // Criar formul√°rio din√¢mico para exclus√£o
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/alunos/${id}/deletar`;
                
                // Adicionar ao body e submeter
                document.body.appendChild(form);
                form.submit();
            }
        }
    </script>
</body>
</html>